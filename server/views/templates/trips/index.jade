extends ../../layouts/master
block content
  h3 Trips
  .row
    .col-sm-4
      each trip in trips
        .row
          .col-sm-offset-1.col-sm-10.col-xs-offset-2.col-xs-8.trips
            p.title: a(href='/trips/#{trip._id}/itinerary')= trip.title
            p.departure= trip.departureDate
            p.return= trip.returnDate
            p.city= trip.destinationCity
